<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".UserProfileFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient1"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="68dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/logosatusatu" />

        <ImageView
            android:layout_marginTop="35dp"
            android:id="@+id/profile_pict"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_below="@id/logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/pp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="170dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_pict"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="Nama"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/usernameout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nama"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:ems="20"
                    android:text="Yonathan Pandapotan"
                    android:textColor="@color/Putih"
                    android:textColorHint="@color/Putih"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/nim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/usernameout"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="NIM"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Nimc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nim"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:ems="20"
                    android:text="20160801010"
                    android:textColor="@color/Putih"
                    android:textColorHint="@color/Putih"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/fakultas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailc"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="FAKULTAS"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/fakultasc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fakultas"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:ems="20"
                    android:text="Text"
                    android:textColor="@color/Putih"
                    android:textColorHint="@color/Putih"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Jurusan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fakultasc"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="JURUSAN"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Jurusanc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Jurusan"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:ems="20"
                    android:text="Text"
                    android:textColor="@color/Putih"
                    android:textColorHint="@color/Putih"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Nimc"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Email"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/emailc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:ems="20"
                    android:text="Text"
                    android:textColor="@color/Putih"
                    android:textColorHint="@color/Putih"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/jenis_kelamin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailc"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="JENIS KELAMIN"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/jenis_kelaminc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jenis_kelamin"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:ems="20"
                    android:text="Text"
                    android:textColor="@color/Putih"
                    android:textColorHint="@color/Putih"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tanggallahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jenis_kelaminc"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="TANGGAL LAHIR"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tanggallahirc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tanggallahir"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:ems="20"
                    android:text="Text"
                    android:textColor="@color/Putih"
                    android:textColorHint="@color/Putih"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tanggallahirc"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="ALAMAT"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/alamatc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/alamat"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:ems="20"
                    android:text="Text"
                    android:textColor="@color/Putih"
                    android:textColorHint="@color/Putih"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/nohp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/alamatc"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="NOMER HANDPHONE"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/nohpc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nohp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:ems="20"
                    android:text="Text"
                    android:textColor="@color/Putih"
                    android:textColorHint="@color/Putih"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/ipkp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nohpc"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="IPK"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/ipkpc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ipkp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:ems="20"
                    android:text="Text"
                    android:textColor="@color/Putih"
                    android:textColorHint="@color/Putih"
                    android:textSize="20dp" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>