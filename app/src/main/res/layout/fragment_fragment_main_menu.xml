<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    tools:context=".FragmentMainMenu"
    android:clickable="true">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:background="#11000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:background="#11000000"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="249dp">

                <LinearLayout
                    android:background="#11000000"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    tools:layout_editor_absoluteX="83dp"
                    tools:layout_editor_absoluteY="16dp"
                    android:weightSum="2">

                    <TextView
                        android:textColor="@color/Putih"
                        android:id="@+id/namaMaha"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:textSize="25dp"
                        android:gravity="center_vertical"
                        android:text="Yonathan Pandapotan" />

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        tools:src="@mipmap/ic_launcher_round" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    tools:layout_editor_absoluteX="83dp"
                    tools:layout_editor_absoluteY="16dp"
                    android:weightSum="2">

                    <TextView
                        android:textColor="@color/Putih"
                        android:id="@+id/nimMaha"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="17dp"
                        android:gravity="center"
                        android:text="20160801145"
                        android:textAlignment="center"/>

                    <TextView
                        android:textColor="@color/Putih"
                        android:id="@+id/waktu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="7pt"
                        android:text="testTime"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#11000000"
                android:layout_marginBottom="12dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="249dp">

                <LinearLayout
                    android:id="@+id/linearJadwal"
                    android:background="#11000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_marginBottom="7dp"
                    tools:layout_editor_absoluteX="82dp"
                    tools:layout_editor_absoluteY="385dp">

                    <TextView
                        android:id="@+id/jadwal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jadwal Hari Ini"
                        android:textColor="@color/Putih"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="9pt"
                        android:padding="9dp"
                        tools:layout_editor_absoluteX="151dp"
                        tools:layout_editor_absoluteY="428dp" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="4"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/arrow_right"
                        tools:layout_editor_absoluteX="102dp"
                        tools:layout_editor_absoluteY="398dp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_recycler_view2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scrollbars="vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#11000000"
                android:layout_marginBottom="12dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="249dp">

                <LinearLayout
                    android:id="@+id/linearTugas"
                    android:background="#11000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_marginBottom="7dp"
                    tools:layout_editor_absoluteX="82dp"
                    tools:layout_editor_absoluteY="385dp">

                    <TextView
                        android:id="@+id/tugas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pengingat Tugas"
                        android:textColor="@color/Putih"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:textSize="9pt"
                        android:padding="9dp"
                        tools:layout_editor_absoluteX="151dp"
                        tools:layout_editor_absoluteY="428dp" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="4"
                        android:padding="8dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/arrow_right"
                        tools:layout_editor_absoluteX="102dp"
                        tools:layout_editor_absoluteY="398dp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scrollbars="vertical"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>