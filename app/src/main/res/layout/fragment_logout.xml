<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:src="@drawable/logosatusatu" />
    <ImageView
        android:id="@+id/profile_pict"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:src="@drawable/pp"
        android:layout_below="@+id/logo"/>

    <EditText
        android:id="@+id/usernameout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="#11000000"
        android:ems="20"
        android:hint="Yonathan Pandapotan"
        android:textAlignment="center"
        android:textColor="@color/Putih"
        android:textColorHint="@color/Putih"
        android:textSize="20dp"
        android:layout_below="@+id/profile_pict"/>

    <EditText
        android:id="@+id/Nim"
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="#11000000"
        android:layout_below="@+id/usernameout"
        android:ems="20"
        android:textAlignment="center"
        android:textColorHint="@color/Putih"
        android:textColor="@color/Putih"
        android:textSize="20dp"
        android:hint="20160801145"/>


    
</RelativeLayout>